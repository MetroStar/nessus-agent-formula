{#- Initialize a map of default values #}
{%- load_yaml as defaults %}

package: NessusAgent
sbin_file: /opt/nessus_agent/sbin/nessuscli
nessus_server: ''
nessus_key: ''
nessus_port: ''
nessus_groups: ''
log_rotation_strategy: ''
log_rotation_time: ''
log_max_size: ''
log_max_files: ''

{%- endload %}

{#- Define the nessus map, merging pillar and default values #}
{%-
    set nessus = salt['pillar.get'](
        'nessus-agent:lookup',
        default=defaults,
        merge=True
    )
%}
